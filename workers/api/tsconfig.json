{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "lib": [
            "ES2022",
            "WebWorker"
        ],
        "types": [
            "@cloudflare/workers-types"
        ],
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "wrangler.toml"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}