{
  "name": "@aura-flow/common",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities, types, and business logic for AuraFlow",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "ts-node scripts/db-setup.ts migrate",
    "db:seed": "ts-node scripts/db-setup.ts seed",
    "db:reset": "ts-node scripts/db-setup.ts reset",
    "db:status": "ts-node scripts/db-setup.ts status",
    "db:setup": "ts-node scripts/db-setup.ts setup"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/bcrypt": "^5.0.1",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0"
  }
}